@using Stock.Domain.ViewModels.Products;
@model List<ProductViewModel>
@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-center mb-5 w-100">
    <div class="d-flex justify-content-between align-items-center w-75">
        <h3>
            <i class="fa-solid fa-cart-shopping"></i>
            Products
        </h3>
        <div class="d-flex flex-column align-items-center justify-content-center">
            <a onclick="showInPopup('@Url.Action("AddOrEdit","Products",null,Context.Request.Scheme)','New Product')" class="btn btn-dark">
                <i class="fas fa-add me-2"></i>
                add product
            </a>
        </div>
    </div>
</div>


<div class="d-flex justify-content-center">
    <table class="table text-center w-75">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <div class="d-flex justify-content-center gap-3">
                            <a onclick="showInPopup('@Url.Action("AddOrEdit","Products",new {id=item.Id},Context.Request.Scheme)','Update Product')"
                               class="text-primary">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a asp-asp-controller="Stores" asp-action="Delete" asp-route-id="@item.Id" class="text-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>