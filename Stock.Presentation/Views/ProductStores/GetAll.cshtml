@using Stock.Domain.ViewModels.Purchase;
@model GetAllProductStoreViewModel

<form method="post" asp-controller="ProductStores" asp-action="GetAll" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="SelectedStoreId"> Stores </label>
        <select name="SelectedStoreId" class="input-box width100" asp-items="@(new SelectList(Model.Stores, "Id", "Name"))">
        </select>
    </div>
    <button type="submit" class="btn btn-primary"> Get Products </button>
</form>


<h1 class="text-center mb-4">
    <i class="fa-solid fa-store"></i>
    Products
</h1>

<div class="d-flex justify-content-center">
    <table class="table text-center w-75">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","ProductStores",null,Context.Request.Scheme)','New Store')" class="btn btn-dark d-flex justify-content-center gap-2">
                        <i class="fas fa-add"></i>
                        new purchase
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        @item?.Id
                    </td>
                    <td>
                        @item?.Name
                    </td>
                    <td>
                        @item?.Quantity
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>